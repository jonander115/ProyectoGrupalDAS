<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/campo_ejercicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ejercicio"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="70dp" />

            <Spinner
                android:id="@+id/spinner_ejercicio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:contentDescription="@string/app_name"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/campo_peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="70dp" />

            <EditText
                android:id="@+id/campo_cant_peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:hint="Introduce el peso"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="70dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/campo_rep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃºmero de repeticiones:"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="38dp" />

            <EditText
                android:id="@+id/campo_cant_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:inputType="number"
                android:hint="Introduce el numero de reps"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="81dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/campo_notas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notas"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="38dp" />

            <EditText
                android:id="@+id/campo_cant_notas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:hint="Introduce alguna nota"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="81dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>