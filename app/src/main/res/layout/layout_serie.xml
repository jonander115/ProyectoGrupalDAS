<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutSerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layoutNumPesoRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numeroserie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Serie nÂº: "
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_NumSerie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/peso"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="   Peso (kg): "
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Peso"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/repeticiones"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="   Rep.: "
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Repeticiones"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="    Notas: "
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Notas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="15sp" />


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>