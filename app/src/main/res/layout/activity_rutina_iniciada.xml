<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RutinaIniciada">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/nombreRutinaIniciada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nombreRutina"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_FinEntrenamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalizar entrenamiento" />

            <Button
                android:id="@+id/bt_AniadirSerieRutinaIniciada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AÃ±adir serie" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Ejercicios a realizar:"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ExpandableListView
                android:id="@+id/listaEjerciciosSeriesRutinaIniciada"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:nestedScrollingEnabled="true"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>